# =============================================================================
# WINST BACKEND - PRODUCTION ENVIRONMENT
# =============================================================================
# WARNING: Never commit production credentials to version control
# Use secure environment variable injection for production deployment
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database Configuration (Production)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=winst_portal_production
DB_USER=winst_production_user
DB_PASSWORD=your-secure-production-password
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=60000
DB_LOGGING=false
NODE_ENV=production
HOST=0.0.0.0
API_VERSION=v1
DEBUG=false
LOG_LEVEL=info

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret
JWT_ALGORITHM=HS256

# CORS Configuration (Restrictive for production)
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
TEMP_DIR=./temp

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-production-email@your-domain.com
SMTP_PASS=your-secure-email-password
SMTP_SECURE=true
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=WINST Internship Portal

# GitHub Integration (Production)
GITHUB_TOKEN=your-production-github-token
GITHUB_API_URL=https://api.github.com

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-production
SESSION_MAX_AGE=3600000

# Cache Configuration (Production Redis)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
CACHE_TTL=3600

# Logging Configuration
LOG_FORMAT=combined
LOG_FILE=./logs/production.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Production Features (Security focused)
ENABLE_SWAGGER=false
ENABLE_CORS_PREFLIGHT=true
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_STACK_TRACE=false

# Payment Gateway (Production)
RAZORPAY_KEY_ID=your-razorpay-live-key
RAZORPAY_KEY_SECRET=your-razorpay-live-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-live-webhook-secret
PAYMENT_MODE=live

# AWS Configuration (Production)
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-aws-production-access-key
AWS_SECRET_ACCESS_KEY=your-aws-production-secret-key
S3_BUCKET_NAME=winst-prod-uploads
S3_PUBLIC_READ=false

# Certificate Generation
CERTIFICATE_PATH=./certificates
CERTIFICATE_TEMPLATE_PATH=./templates/certificate.html
CERTIFICATE_SIGNATURE_PATH=./assets/signature.png
CERTIFICATE_LOGO_PATH=./assets/winst-logo.png

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
