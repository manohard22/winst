# =============================================================================
# WINST INTERNSHIP PORTAL - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and customize the values for your environment
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=winst_portal_db
DB_USER=winst_db_user
DB_PASSWORD=your-secure-database-password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_LOGGING=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
HOST=localhost
API_VERSION=v1
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# IMPORTANT: Use strong, unique secrets in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-change-this
JWT_ALGORITHM=HS256

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
TEMP_DIR=./temp

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Gmail Setup:
# 1. Enable 2-factor authentication
# 2. Generate app password: https://myaccount.google.com/apppasswords
# 3. Use app password here, not your regular password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=true
EMAIL_FROM=noreply@winst.com
EMAIL_FROM_NAME=WINST Internship Portal

# Alternative SMTP providers:
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587
# SendGrid: smtp.sendgrid.net:587

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# Create personal access token: https://github.com/settings/tokens
# Permissions needed: public_repo (for public repos) or repo (for private repos)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_API_URL=https://api.github.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=your-secure-session-secret-change-this
SESSION_MAX_AGE=3600000

# =============================================================================
# CACHE CONFIGURATION (REDIS)
# =============================================================================
# Optional: Install Redis for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=combined
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_CORS_PREFLIGHT=true
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_STACK_TRACE=false

# =============================================================================
# PAYMENT GATEWAY (RAZORPAY)
# =============================================================================
# Sign up at: https://razorpay.com/
# Get API keys from dashboard
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
PAYMENT_MODE=test

# =============================================================================
# AWS CONFIGURATION (OPTIONAL)
# =============================================================================
# For file uploads to S3 (optional, files stored locally by default)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=winst-uploads
S3_PUBLIC_READ=false

# =============================================================================
# CERTIFICATE GENERATION
# =============================================================================
CERTIFICATE_PATH=./certificates
CERTIFICATE_TEMPLATE_PATH=./templates/certificate.html
CERTIFICATE_SIGNATURE_PATH=./assets/signature.png
CERTIFICATE_LOGO_PATH=./assets/winst-logo.png

# =============================================================================
# SSL CONFIGURATION (PRODUCTION)
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================
# Sentry for error tracking: https://sentry.io/
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# New Relic for performance monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key